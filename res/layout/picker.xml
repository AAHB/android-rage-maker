<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:minWidth="200px" android:layout_gravity="center">
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thin"></TextView>
        <TextView android:layout_gravity="right" android:layout_width="fill_parent" android:id="@+id/textView2" android:gravity="right" android:layout_height="wrap_content" android:text="Thick"></TextView>
    </LinearLayout>
    <SeekBar android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/width_bar" android:max="40"></SeekBar>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Ok" android:id="@+id/width_ok"></Button>

	
</LinearLayout>

